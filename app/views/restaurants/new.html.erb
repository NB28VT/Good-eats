<h1>Add a new restaurant</h1>
<p>Name, address, city, state, and zip code requried</p>

<%= form_for @restaurant, url: { action: "create" } do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :state %>
    <%= f.text_field :state %>
  </p>
  <p>
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %>
  </p>
  <p>
    <%= f.label :description   %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :category %>
    <%= f.text_field :category %>
  </p>
  <%= f.submit "Add restaurant" %>
<% end %>

<%= link_to "Home", restaurants_path %>
